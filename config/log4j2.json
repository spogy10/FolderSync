{
  "configuration": {
    "status": "error",
    "name": "DefaultLoggerConfig",
    "packages": "main,utility",
    "properties": {
      "property": [
        {
          "name": "pattern",
          "value": "[%t] %l - %m%n"
        },
        {
          "name": "LogDir",
          "value": "log"
        }
      ]
    },
    "appenders": {
      "Console": {
        "name": "ConsoleAppender",
        "PatternLayout": {
          "pattern": "${pattern}"
        }
      },
      "RollingFile": {
        "name": "FileAppender",
        "fileName": "${LogDir}/synclog.log",
        "filePattern": "${LogDir}/%d{dd-MM-yyyy}.synclog.log",
        "append": "true",
        "bufferedIO": "true",
        "createOnDemand": "true",
        "PatternLayout": {
          "pattern": "${pattern}"
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "10MB"
          },
          "TimeBasedTriggeringPolicy": {
            "interval": "1"
          }
        }
      },
      "StringBuilderAppender": {
        "name": "StringAppender",
        "PatternLayout": {
          "pattern": "${pattern}"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "debug",
        "AppenderRef": [
          {
            "ref": "ConsoleAppender"
          },
          {
            "ref": "FileAppender"
          },
          {
            "ref": "StringAppender"
          }
        ]
      }
    }
  }
}